{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": [
      "dom",
      "es6"
    ],
    "jsx": "react",
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "noEmitOnError": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "components/*": [
        "src/components/*"
      ],
      "common/*": [
        "src/components/common/*"
      ],
      "ducks/*": [
        "src/ducks/*"
      ],
      "api/*": [
        "src/api/*"
      ],
      "helpers/*": [
        "src/helpers/*"
      ],
      "models/*": [
        "src/models/*"
      ]
    },
    "typeRoots": [
      "node_modules/@types",
      "src/@types"
    ],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./webpack/**/*"
  ]
}
